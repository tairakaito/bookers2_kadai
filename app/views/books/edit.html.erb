<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <h2><%= @book.errors.count%>error</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>

      <% end %>
    </ul>
  </div>
<% end %>
<div class="body">
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
 		  	<h1>Editing Book</h1>
  		  	<%= form_for (@book) do |f| %>
			<div class="field row">
			<h4>title</h4>
			<%= f.text_field :title,class: "col-xs-12" %>
	</div>
			<div class="field row">
			<h4>body</h4>
			<%= f.text_field :body,class: "col-xs-12" %>
	</div>
	<div class="action row">
			<%= f.submit class: "col-xs-12 btn btn-danger" %>
		</div>
			<% end %>
			<%= link_to 'Show', book_path(params[:id])%>
			<%= link_to 'Back', books_path%>
		</div>
	</div>
</div>
</div>