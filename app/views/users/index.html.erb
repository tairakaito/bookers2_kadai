 <%= flash[:notice] %>
<%= render 'users/list'  %>
<div class="col-xs-9">
  		  	  <h2>Users</h2>
  		  	  <table class="table table-hover table-inverse">
  		  	  	<thead>
  		  	  		<tr>
  		  	  		  <th>image</th>
  		  	  		  <th>name</th>
                  <th colspan='3'></th>
                </tr>
                </thead>
                <tbody>
                 <% @users.each do |user| %>
          		  	  	<tr>
                        <th><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></th>
                      <td><%= user.name %></td>
          		  	  	<td><%= link_to "Show",user_path(user)%></td>
                      </tr>
                  <%end%>

                </tbody>
          </table>
  		</div>
  	</div>
