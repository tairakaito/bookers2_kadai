 <%= flash[:notice] %>
<%= render 'users/list'  %>
<div class="col-xs-9">
  		  	  <h2>Bookers</h2>
  		  	  <table class="table table-hover table-inverse">
  		  	  	<thead>
  		  	  		<tr>
                  <th class="col-md-3"></th>
  		  	  		  <th class="col-md-4">Title</th>
  		  	  		  <th class="col-md-4">Opinion</th>
                  <th class="col-md-1"></th>
                </tr>
                </thead>
                <tbody>
                 <% @user.books.each do |book| %>
          		  	  	<tr>
                        <th><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></th>
                      <td>
                        <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                          <% end %>
                        </td>
          		  	  	<td><%= book.body %></td>
                      </tr>
                  <%end%>

                </tbody>
          </table>
  		</div>
  	</div>